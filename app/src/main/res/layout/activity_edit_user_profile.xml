<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterUser"
    android:background="#03A9F4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/error_message"
        android:layout_gravity="center"
        android:text="@string/error_password"

        android:textSize="20dp"

        android:layout_weight="0.04"
        android:textColor="#fa4a53"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="General Account Settings"
        android:id="@+id/textView2"

        android:textColor="#CDDC39"
        android:textStyle="bold"
        android:layout_alignTop="@+id/error_message"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewRegister"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnSaveChanges"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtProfileFirstName"
                    android:hint="First Name"
                    android:background="@drawable/middle_of_boxes"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/user"

                    android:layout_weight="1" />

                <EditText
                    android:background="@drawable/middle_of_boxes"
                    android:padding="10dp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtProfileLastName"
                    android:hint="Last Name"
                    android:drawableLeft="@drawable/user"

                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/middle_of_boxes"
                android:padding="10dp">

                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/nationality"
                    android:id="@+id/textView3"
                    android:drawableLeft="@drawable/flag"
                    android:gravity="center"
                    android:layout_weight="1.46" />

                <Spinner


                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/spinnerProfileNationality"

                    android:prompt="@string/prompted"

                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/birthday"
                    android:id="@+id/text_birthday"
                    android:layout_weight="1.46"

                    android:background="@drawable/middle_of_boxes"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/birthday"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtProfileBirthday"
                    android:layout_weight="2"
                    android:text="@string/date_birthday"
                    android:background="@drawable/middle_of_boxes"
                    android:padding="10dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:onClick="setDate"
                    android:focusableInTouchMode="true"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a Security Question:"
                android:textColor="#000000"
                android:layout_margin="2dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerSecretQuestion"
                android:background="@drawable/middle_of_boxes"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtProfileSecretAnswer"
                android:background="@drawable/middle_of_boxes"
                android:padding="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:id="@+id/btnChangePassword"
                android:background="@drawable/button_login"
                android:textColor="#ffffff"
                android:layout_marginTop="7dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSaveChanges"
        android:background="@drawable/button_login"
        android:textColor="#ffffff"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
