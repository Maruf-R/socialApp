<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#03A9F4"
    android:visibility="visible">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" />
    </LinearLayout>

</TabHost>

<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="1"
android:paddingLeft="30dp"
android:paddingRight="30dp"
android:paddingTop="30dp"
android:paddingBottom="30dp"
android:id="@+id/call_window"
xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="invisible">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Incoming Call From.."
    android:id="@+id/textView4"
    android:layout_gravity="center_horizontal"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:layout_weight="0.05"
    android:gravity="center"
    android:textStyle="bold" />

<ImageView
    android:layout_width="179dp"
    android:layout_height="100dp"
    android:id="@+id/imageView2"
    android:layout_below="@+id/textView4"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.31"
    android:src="@drawable/oldman"/>

<TextView
    android:layout_width="136dp"
    android:layout_height="wrap_content"
    android:text="Ze oldman"
    android:id="@+id/textView5"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.06"
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:textSize="15dp"
    android:textStyle="bold" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="173dp"
    android:layout_weight="0.67"
    >

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/answer_call"
        android:layout_weight="0.05"
        android:layout_below="@+id/textView5"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/incoming_phone"
        android:background="@drawable/button_login"
        android:padding="5dp"
        android:layout_marginRight="2dp" />
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/end_incoming_call"
        android:layout_weight="0.05"
        android:layout_below="@+id/textView5"
        android:layout_gravity="bottom|center"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/end_call"
        android:background="@drawable/endcallbutton"
        android:padding="5dp"
        android:layout_marginLeft="2dp" />

</LinearLayout>

</LinearLayout>
</RelativeLayout>